<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:id="@+id/mainlayout"
    android:name="androidx.navigation.fragment.NavHostFragment"
    tools:context=".prof_student_login">
    <Button
        android:id="@+id/exam"
        android:text="exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="624dp"
        android:layout_margin="20sp"
        android:gravity="center"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/admin_Img"
            android:layout_width="74dp"
            android:layout_height="64dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/chatting" />

        <Button
            android:id="@+id/admin_btn"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_btn"
            android:text="Admin"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/prof_Img"
            android:layout_width="86dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/teacher" />

        <Button
            android:id="@+id/professor_btn"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/prof_btn"
            android:text="Professor"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/student_Img"
            android:layout_width="88dp"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/student" />

        <Button
            android:id="@+id/student_btn"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stu_btn"
            android:text="Student"
            android:textAllCaps="false" />


    </LinearLayout>
</FrameLayout>