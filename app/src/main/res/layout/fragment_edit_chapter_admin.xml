<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_prof_sign"
    tools:context=".editChapterAdmin">

    <EditText

        android:id="@+id/professor"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:hint="Professor Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/subject"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:hint="Subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#CE946F9A"
            android:background="@drawable/newstyle"
            android:textAllCaps="false"
            android:id="@+id/add"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:text="Add" />
        <Button
            android:textColor="#CE946F9A"
            android:background="@drawable/newstyle"
            android:textAllCaps="false"
            android:id="@+id/load"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="load" />
    </LinearLayout>


    <Button
        android:textColor="#CE946F9A"
        android:background="@drawable/newstyle"
        android:textAllCaps="false"
        android:id="@+id/updatee"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="20dp"
        android:text="update" />
    <Button
        android:textColor="#CE946F9A"
        android:background="@drawable/newstyle"
        android:textAllCaps="false"
        android:id="@+id/viewall"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        android:text="View All Data" />

    <TextView
        android:id="@+id/showdata"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:hint="Data"
        android:textSize="20dp" />

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="203dp">

        <TextView
            android:id="@+id/alldataview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:hint="All Data"
            android:textSize="20sp" />
    </androidx.core.widget.NestedScrollView>
</LinearLayout>