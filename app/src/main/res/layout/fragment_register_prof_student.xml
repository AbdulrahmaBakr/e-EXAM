<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_prof_student">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_prof_sign"
        android:gravity="center"
        android:orientation="vertical"
         >


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/register_btns_style"
            android:hint="User Name"
            android:padding="15dp"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/mail"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/register_btns_style"
            android:hint="Enter Your Email"
            android:padding="15dp" />

        <EditText
            android:id="@+id/password"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/register_btns_style"
            android:hint=" Password"
            android:inputType="numberPassword"
            android:padding="15dp"

            />

        <Button
            android:id="@+id/register_now"
            android:layout_width="316dp"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/register_btns_style"
            android:textColor="#0B2A57"
            android:text="Register Now"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/student_selected"
                android:layout_width="187dp"
                android:layout_height="111dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="100dp"
                android:src="@drawable/student" />

            <ImageView
                android:id="@+id/prof_selected"
                android:layout_width="187dp"
                android:layout_height="111dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="100dp"
                android:src="@drawable/teacher" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/choose_register"
                android:layout_width="247dp"
                android:layout_height="57dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="88dp">



            <TextView
                android:id="@+id/tologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="Already Registered ? Login....."
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:outlineSpotShadowColor="#F60101"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:src="@drawable/home" />

            <TextView

                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_to_main"
                android:textColor="#3E266A"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>